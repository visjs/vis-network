{
  "presets": [
    [
      "@babel/preset-env",
      {
        "targets": "> 0.1% or not dead"
      }
    ],
    "@babel/preset-typescript"
  ],
  "plugins": [
    "css-modules-transform",
    "@babel/proposal-class-properties",
    "@babel/proposal-object-rest-spread",
    "@babel/plugin-transform-runtime"
  ],
  "env": {
    "test": {
      "presets": [
        [
          "@babel/preset-env",
          {
            "targets": "maintained node versions"
          }
        ],
        "@babel/preset-typescript"
      ]
    },
    "test-cov": {
      "presets": [
        [
          "@babel/preset-env",
          {
            "targets": "maintained node versions"
          }
        ],
        "@babel/preset-typescript"
      ],
      "plugins": ["istanbul"]
    }
  }
}
